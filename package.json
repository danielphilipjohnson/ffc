{
  "name": "fcc",
  "version": "1.0.0",
  "description": "Responsive portfolio website",
  "main": "index.js",
  "homepage": "https://danielphilipjohnson.github.io/fcc",
  "scripts": {
    "sass": "node-sass -w scss/ -o dist/css/ --recursive",
    "deploy": "gh-pages -d dist",
    "concat:js": "concat-cli -f dist/src/*.js -o dist/js/bundle.js",
    "watch:js": "onchange 'dist/src/*.js' -- npm run concat:js",
    "build-css": "node-sass --include-path scss scss/main.scss   dist/css/main.css"
  },
  "author": "Daniel Philip Johnson",
  "license": "MIT",
  "dependencies": {
    "browser-sync": "^2.26.7",
    "concat": "^1.0.3",
    "gh-pages": "^1.2.0"
  },
  "devDependencies": {
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "onchange": "^7.0.2"
  }
}
